@import "reset.css";
/*引入css文件的一种方式*/
/*

-ms-filter: "progid:DXImageTransform.Microsoft.gradient(GradientType=1,startColorstr=#99ffffff,endColorstr=#99ffffff)";
filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#99ffffff,endColorstr=#99ffffff);
background:rgba(255,255,255,.8);


 filter:alpha(opacity=40); 针对 IE8 以及更早的版本 */
 body
 	font-size 16Px
 
body.active
	position fixed
*[hidden]
	display none!important
.header
	position fixed
	top 0
	left 0
	right 0
	height 136px
	overflow hidden
	&.active
		.wrap
			background #cdcccc
			transform translateY(-@height)
			transition 0.3s transform,0.3s background-color 0.1s
	&.child-menu
		height @height*2
		.child-menu
			display block
	&.column
		.child-menu
			.column-menu
				animation fadeIn 0.3s forwards
			.cost
				visibility hidden
	&.up
		.child-menu
			.cost
				animation fadeIn 0.3s forwards
			.column-menu
				visibility hidden
	.wrap
		position relative
		z-index 2
		transition 0.3s transform  0.1s,0.3s background-color
	.top-menu
		height @height
		position relative
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		align-items center
		justify-content center
		a
			display block
		.brand
			img
				display block
				width 280px
				margin 0 auto
		.right-option
		.left-option
			position absolute
			top 0
			bottom 0
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			align-items center
			flex-wrap wrap
		.left-option
			left 40px
			.menu
				img
					width 52px
		.right-option
			right 40px
			.login
				img
					width 40px
			.shoping-car
				margin-left 20px
				img
					width 56px
	.bottom-menu
		height @height
		.sort
			padding 30px 0 20px
			height 100%
			box-sizing border-box
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			align-items center
			justify-content space-around
			background linear-gradient(to right,#3C3C3C,#3C3C3C) 20% center/1Px 60% no-repeat,
			linear-gradient(to right,#3C3C3C,#3C3C3C) 40% center/1Px 60% no-repeat,
			linear-gradient(to right,#3C3C3C,#3C3C3C) 60% center/1Px 60% no-repeat,
			linear-gradient(to right,#3C3C3C,#3C3C3C) 80% center/1Px 60% no-repeat
			a
				display block
				img
					display block
			.menu
				img
					width 52px
			.column
				img
					width 64px
			.up
				img
					width 50px
			.login
				img
					width 40px
			.shoping-car
				img
					width 56px
	.child-menu
		position relative
		z-index 1
		margin-top -@height
		height @height
		display none
		.public-child-menu
			position absolute
			left 0
			right 0
			top 0
			bottom 0
			transition 0.3s transform,0.3s opacity;
			transform translateY(-100%)
			opacity 0
			height 100%
			display flex
			align-items center
			justify-content space-around
			background rgba(53,53,53,0.5)
			box-sizing border-box
			padding 0 20%
			font-size 40px
			color #fff
			font-weight bold
			a
				display block
				img
					display block
			.column-one
				img
					width 52px
			.column-two
				img
					width 44px
					
.footer
	margin 0 30px
	font-size 24px
	line-height 1.5
	color #515151
	border-top 1px solid #313131
	h3
		padding 20px 0
	.copy-right
		margin-top 30px
		text-align center
		line-height 2
		border-top 1px solid #313131

.goto-top
	position fixed
	bottom 30px
	right 30px
	border-radius 50%
	img
		display block
		width 66px
		height 66px


.main
	padding-top 136px
	.main-product-list
		padding 0 60px
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-wrap wrap
		justify-content space-between
		flex-direction row
		&.column-one
			justify-content center
			.item
				flex 0 0 700px
		.item
			margin-bottom 60px
			font-size 24px
			color #000
			line-height 1.5
			flex 0 0 350px
			transition flex 0.3s
			a
				display block
			.pic
				display block
				img
					width 100%
			h3
				padding 10px 10px 0 10px
			.cost
				display block
				padding 0 10px 10px 10px
				.del
					text-decoration line-through
				.red
					color red
				

.search-box
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	background rgba(55,53,53,0.8)
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	align-items center
	justify-content center
	.box
		padding 20px
		border 2px solid #fff
		border-radius 10px
		.wrap
			font-size 0
			display flex
			align-items center
			justify-content center
			border-bottom 1px solid #fff
			input
				vertical-align middle
				background none
				outline none
				border none
				appearance none
				border-radius 0
			.text
				font-size 30px
				width 300px
				color #fff
				padding 10px 5px
				line-height 1
				&::placeholder
					color #fff
					line-height 1.5
			.submit
				width 54px
				height 54px
				background url(../img/search.png) center center/54px 54px no-repeat
.content-body
	position relative
.menu-box-layout
	content ""
	position fixed
	bottom 0
	left 0
	right 0
	top 0
	background rgba(0,0,0,0.5)
	transform translateX(-100%)
	transition 0.3s;
	&.active
		transform translateX(0)
.menu-box
	position fixed
	top 0
	left 0
	bottom 0
	width 450px
	padding-top 30px
	background #e4e4e4
	transition 0.3s;
	transform translateX(-100%)
	&.active
		transform translateX(0)
	.wrap
		padding 30px 15px
		font-size 48px
		font-weight 100
		line-height 100px
		text-align center
		background #fff
		.search
			color #000
			border-top 1px solid #000
			background url(../img/search-btn.png) 20px center/40px 40px no-repeat
		.type
			.item
				border-top 1px solid #000
				span
					position relative
					&:after
						content ""
						position absolute
						right -60px
						top 50%
						transform translateY(-50%)
						width 40px
						height 35px
						background url(../img/arrow-right.png) center center/40px 35px no-repeat

@keyframes fadeIn{
	to{
		transform translateY(0)
		opacity 1
	}
}
